<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/authorization_background"
        android:padding="25sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TypeSelectionActivity">

    <TextView
            android:id="@+id/create_account_text"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_marginTop="60sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/account_create"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingEnd="50sp"
            android:paddingStart="50sp"
            >
        <Button
                android:id="@+id/student_button"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="@string/student"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/BE_yellow"
                android:textColor="@color/BE_black"
                android:layout_marginBottom="6sp"

                />
        <Button
                android:id="@+id/teacher_button"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="@string/teacher"
                android:backgroundTint="@color/BE_black"
                android:textColor="@color/BE_yellow"
                />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
