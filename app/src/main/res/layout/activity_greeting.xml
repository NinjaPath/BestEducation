<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="25dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GreetingActivity"
        android:background="@drawable/authorization_background"

        >



    <TextView
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_marginTop="60sp"
            android:id="@+id/greeting_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/app_name"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            />

    <TextView
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="#FFFFFF"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/greeting_app_name"
            android:text="@string/app_description"
            android:layout_marginTop="5sp"
            android:textSize="20sp"

            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingEnd="50sp"
            android:paddingStart="50sp"
            >
        <Button
                android:id="@+id/sign_in"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="@string/sign_in"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/BE_yellow"
                android:textColor="@color/BE_black"
                android:layout_marginBottom="6sp"
                />
        <Button
                android:textSize="15sp"
                android:textAllCaps="false"
                android:id="@+id/log_in"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="@string/log_in"
                android:backgroundTint="@color/BE_black"
                android:textColor="@color/BE_yellow"
                />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
